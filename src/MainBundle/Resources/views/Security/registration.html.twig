{% extends 'MainBundle:Layout:layout.html.twig' %}

{% import 'MainBundle:Template:macroses.html.twig' as macroses %}

{% block body %}
    {{ form_start(form, {'action': path('registration')}) }}
        <h3>Регистрация</h3>
        {{ macroses.text_field(form.login, 180) }}
        {{ macroses.text_field(form.email, 180) }}
        {{ macroses.text_field(form.password.first, 180) }}
        {{ macroses.text_field(form.password.second, 180) }}
        {{ macroses.button_field(form.submit) }}
    {{ form_end(form) }}
{% endblock %}
